<%= form_with model: @user, url: login_url, :html => {:id => "form_login", :method => "post"}   do |f| %>
  <%= render partial: "shared/form_errors", locals: { object: @user } %>
  <div class="login">
    <%= f.label :username %>
    <%= f.text_field :username, required: true %>
  </div>
  <div class="login">
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>
  <p class="login">
    <%= f.submit "Login", class: 'button' %>
  </p>
<% end %>
